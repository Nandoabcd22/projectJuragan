            </LinearLayout>

            <LinearLayout
                android:id="@+id/containterMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/materialBtn"
